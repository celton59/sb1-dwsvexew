---
interface Props {
  text: string;
  className?: string;
}

const { text, className = "" } = Astro.props;
---

<h2 class={`title text-center ${className}`}>
  <span class="highlighted">{text}</span>
</h2>

<style>
  .title {
    color: #161616;
    font-size: 2.45rem;
    font-weight: 700;
    margin: 0.5rem 0 0;
  }

  .highlighted {
    border-bottom: 6px solid #ff7a00;
    display: inline-block;
    padding: .2rem 0;
    position: relative;
  }

  @media (max-width: 768px) {
    .title {
      font-size: 1.75rem;
    }

    .highlighted {
      border-bottom: none;
      padding-left: 1rem;
    }

    .highlighted::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 4px;
      height: 80%;
      background-color: #ff7a00;
      border-radius: 2px;
    }
  }
</style>