---
const menuItems = [
  { label: 'Dashboard', href: '/admin', icon: 'ğŸ“Š' },
  { label: 'Posts', href: '/admin/posts', icon: 'ğŸ“' },
  { label: 'Categories', href: '/admin/categories', icon: 'ğŸ—‚ï¸' },
  { label: 'Users', href: '/admin/users', icon: 'ğŸ‘¥' },
  { label: 'Settings', href: '/admin/settings', icon: 'âš™ï¸' },
];

const currentPath = Astro.url.pathname;
---

<aside class="bg-white w-64 border-r border-gray-200 flex flex-col">
  <div class="p-6 border-b border-gray-200">
    <h1 class="text-xl font-bold text-gray-900">Admin Panel</h1>
  </div>
  
  <nav class="flex-1 p-4">
    <ul class="space-y-1">
      {menuItems.map(item => (
        <li>
          <a
            href={item.href}
            class={`flex items-center gap-3 px-4 py-2 rounded-lg text-sm font-medium transition-colors
              ${currentPath === item.href 
                ? 'bg-blue-50 text-blue-600' 
                : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}`}
          >
            <span class="text-xl">{item.icon}</span>
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>

  <div class="p-4 border-t border-gray-200">
    <button
      id="logout-button"
      class="w-full flex items-center gap-2 px-4 py-2 text-sm font-medium text-red-600 hover:bg-red-50 rounded-lg transition-colors"
    >
      <span class="text-xl">ğŸšª</span>
      Logout
    </button>
  </div>
</aside>

<script>
  const logoutButton = document.getElementById('logout-button');
  
  logoutButton?.addEventListener('click', async () => {
    try {
      const response = await fetch('/api/auth/logout', {
        method: 'POST',
      });

      if (response.ok) {
        window.location.href = '/admin/login';
      }
    } catch (error) {
      console.error('Error logging out:', error);
    }
  });
</script>