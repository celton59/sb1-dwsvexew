---
import { getAdminUser } from '../../../utils/admin';
const currentUser = await getAdminUser(Astro);
---

<header class="bg-white border-b border-gray-200 h-16 flex items-center px-6">
  <div class="flex-1"></div>
  <div class="flex items-center gap-4">
    <span class="text-sm text-gray-600">{currentUser?.name}</span>
    <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center">
      <span class="text-blue-600 font-medium">
        {currentUser?.name.charAt(0).toUpperCase()}
      </span>
    </div>
  </div>
</header>