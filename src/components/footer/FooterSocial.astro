---
const socialLinks = [
  { name: 'Twitter', href: '#', icon: '🐦' },
  { name: 'GitHub', href: '#', icon: '⌨️' },
  { name: 'LinkedIn', href: '#', icon: '💼' },
  { name: 'YouTube', href: '#', icon: '📺' }
];
---

<div class="flex items-center gap-4">
  {socialLinks.map(link => (
    <a
      href={link.href}
      class="w-8 h-8 flex items-center justify-center rounded-full bg-blue-800 
        hover:bg-blue-700 text-blue-200 hover:text-white transition-colors"
      target="_blank"
      rel="noopener noreferrer"
      title={link.name}
    >
      <span class="text-lg">{link.icon}</span>
    </a>
  ))}
</div>