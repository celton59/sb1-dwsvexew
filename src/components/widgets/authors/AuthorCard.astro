---
import type { Author } from '../../../types/author';

interface Props {
  author: Author;
}

const { author } = Astro.props;
---

<div class="group relative bg-white rounded-xl shadow-sm hover:shadow-md transition-all duration-300">
  <div class="absolute inset-0 bg-gradient-to-br from-blue-600/80 to-purple-600/80 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl z-10"></div>
  
  <div class="relative z-20 p-6">
    <div class="flex items-center gap-4">
      <div class="relative">
        <div class="w-16 h-16 rounded-full overflow-hidden ring-4 ring-white group-hover:ring-blue-100 transition-all duration-300">
          <img 
            src={author.avatar} 
            alt={author.name}
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
          />
        </div>
        <div class="absolute -bottom-1 -right-1 w-6 h-6 bg-green-400 rounded-full border-2 border-white flex items-center justify-center">
          <span class="text-xs">✓</span>
        </div>
      </div>
      
      <div class="flex-1">
        <h3 class="text-xl font-semibold text-gray-900 group-hover:text-white transition-colors">
          {author.name}
        </h3>
        <p class="text-blue-600 group-hover:text-blue-200 text-sm font-medium transition-colors">
          {author.role}
        </p>
      </div>
    </div>
    
    <p class="mt-4 text-gray-600 group-hover:text-white/90 text-sm transition-colors">
      {author.bio}
    </p>
    
    <div class="mt-6 flex items-center justify-between">
      <div class="flex gap-6">
        <div class="text-center">
          <span class="block text-2xl font-bold text-gray-900 group-hover:text-white transition-colors">
            {author.posts}
          </span>
          <span class="text-xs text-gray-500 group-hover:text-blue-200 transition-colors">
            Artículos
          </span>
        </div>
        <div class="text-center">
          <span class="block text-2xl font-bold text-gray-900 group-hover:text-white transition-colors">
            {author.views}k
          </span>
          <span class="text-xs text-gray-500 group-hover:text-blue-200 transition-colors">
            Lecturas
          </span>
        </div>
      </div>
      
      <div class="flex gap-2">
        {author.socialLinks.map(link => (
          <a 
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="w-8 h-8 rounded-full bg-gray-100 group-hover:bg-white/10 flex items-center justify-center
              text-gray-600 group-hover:text-white transition-all hover:scale-110"
            title={link.platform}
          >
            <span class="text-lg">{link.icon}</span>
          </a>
        ))}
      </div>
    </div>
  </div>
</div>