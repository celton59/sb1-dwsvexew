---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, description, category, image } = post.data;
---

<article class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow overflow-hidden">
  {image && (
    <img 
      src={image} 
      alt={title}
      class="w-full h-36 object-cover"
    />
  )}
  <div class="p-4">
    <span class="text-sm text-orange-500 font-medium">
      {category}
    </span>
    <h3 class="text-lg font-semibold mt-1 mb-1.5">
      <a href={`/blog/${post.slug}`} class="hover:text-blue-600">
        {title}
      </a>
    </h3>
    <p class="text-gray-600 text-sm line-clamp-2">
      {description}
    </p>
  </div>
</article>